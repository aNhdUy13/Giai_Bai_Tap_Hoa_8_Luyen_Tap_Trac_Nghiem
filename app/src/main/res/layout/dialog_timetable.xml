<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:backgroundTint="#03A9F4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="300dp"
        app:cardCornerRadius="10dp"
        android:layout_height="230dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title_app_status"
                    android:text="Thời Khóa Biểu \n(CHƯA TẢI)"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/txtLink"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="https://play.google.com/store/apps/details?id=com.nda.timetable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <Button
                    android:id="@+id/searchLink_openapp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:text="Tải Về"
                    android:drawableLeft="@drawable/mini_icon_search"
                    android:backgroundTint="#FFC107"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>