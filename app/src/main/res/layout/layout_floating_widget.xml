<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <LinearLayout
            android:background="#036591"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_weight="1">


            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3">



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3">
                <ImageView
                    android:id="@+id/img_cancelWidget"
                    android:src="@drawable/ic_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <LinearLayout
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3">
                <ImageView
                    android:id="@+id/img_closeWidget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_base_zoom" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:background="#ECECEC"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.7">
            <LinearLayout
                android:layout_width="0dp"
                android:background="#036591"
                android:layout_weight="0.1"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2.8"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:padding="10dp"
                            android:background="@drawable/shape_corner"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_title"
                                android:text="Title Exam / Practice _ Number"
                                android:textStyle="bold"
                                android:textColor="#FDFDFD"
                                android:textSize="13dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                        </LinearLayout>

                        <LinearLayout
                            android:background="@drawable/shape_corner_top"
                            android:layout_marginTop="15dp"
                            android:layout_width="100dp"
                            android:layout_height="30dp">
                            <TextView
                                android:textSize="15dp"
                                android:text="Câu Hỏi"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/shape_show_task_result"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="15dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_task_question"
                                android:gravity="center|left"
                                android:textSize="14dp"
                                android:text="Here is the task question"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:background="@drawable/shape_corner_top"
                            android:layout_marginTop="15dp"
                            android:layout_width="100dp"
                            android:layout_height="30dp">
                            <TextView
                                android:textSize="15dp"
                                android:text="Đáp Án"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/shape_show_task_result"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="15dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_task_result"
                                android:gravity="center|left"
                                android:textSize="14dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:text="Here is the task result"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"/>


                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:background="#036591"
                android:layout_weight="0.1"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#036591"
            android:layout_weight="0.3"
            android:layout_height="0dp"/>

    </LinearLayout>
</RelativeLayout>